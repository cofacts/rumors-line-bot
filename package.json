{
  "name": "rumors-line-bot",
  "version": "0.0.1",
  "description": "Line bot that checks if a message contains internet rumor. Edit",
  "main": "index.js",
  "scripts": {
    "pretest": "docker-compose up -d && sleep 10",
    "posttest": "docker-compose down",
    "test": "TZ=UTC jest",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "dev": "run-p dev:*",
    "dev:server": "pm2-dev ecosystem.dev.config.js",
    "dev:liff": "webpack-dev-server",
    "postinstall": "run-p build:*",
    "build:server": "babel src -d build --ignore \"src/liff/**\",\"**/__tests__/**\",\"**/__mocks__/**\" --copy-files --no-copy-ignored",
    "build:liff": "NODE_ENV=production webpack",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "preliff": "bash build-liff.sh",
    "i18n:extract": "ttag update i18n/zh_TW.po src/",
    "i18n:validate": "ttag validate i18n/zh_TW.po",
    "clean": "run-s clean:*",
    "clean:server": "rm -rf build",
    "clean:liff": "rm -rf liff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofacts/rumors-line-bot.git"
  },
  "keywords": [
    "Rumor",
    "Mythbusting",
    "LINE bot"
  ],
  "author": "MrOrz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cofacts/rumors-line-bot/issues"
  },
  "homepage": "https://github.com/cofacts/rumors-line-bot#readme",
  "dependencies": {
    "@line/bot-sdk": "^6.8.4",
    "ajv": "^6.12.2",
    "apollo-server-koa": "^2.11.0",
    "date-fns": "^2.14.0",
    "googleapis": "^36.0.0",
    "grapheme-splitter": "^1.0.4",
    "graphql": "^15.0.0",
    "graphql-scalar-objectid": "^0.1.2",
    "graphql-tools": "^4.0.7",
    "jsrsasign": "^8.0.13",
    "koa": "^2.5.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^7.4.0",
    "koa-session2": "^2.2.10",
    "koa-static-server": "^1.5.0",
    "mongodb": "^3.5.6",
    "node-fetch": "^2.0.0",
    "passport-oauth2": "^1.5.0",
    "pm2": "^3.5.0",
    "raw-body": "^2.3.2",
    "redis": "^2.6.5",
    "rollbar": "^2.2.9",
    "string-similarity": "^3.0.0",
    "ttag": "^1.7.22",
    "universal-analytics": "^0.4.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.9.0",
    "@material/theme": "^3.1.0",
    "@material/typography": "^3.1.0",
    "@smui/button": "^1.0.0-beta.20",
    "@smui/card": "^1.0.0-beta.21",
    "@smui/switch": "^1.0.0-beta.21",
    "@smui/textfield": "^1.0.0-beta.20",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "core-js": "^3.6.4",
    "coveralls": "^3.0.0",
    "css-loader": "^3.4.2",
    "dotenv": "^6.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "html-webpack-plugin": "^4.0.4",
    "jest-cli": "^24.9.0",
    "koa-proxies": "^0.11.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mockdate": "^2.0.5",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "=1.13.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "svelte": "^3.20.1",
    "svelte-loader": "^2.13.6",
    "terser-webpack-plugin": "^2.3.5",
    "ttag-cli": "^1.8.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/__fixtures__/"
    ],
    "setupFilesAfterEnv": [
      "./setup-jest.js"
    ]
  },
  "engines": {
    "node": "12.x"
  }
}
